<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ChangePwFragment"
    android:layout_gravity="center"
    android:background="@drawable/button_rounded"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="70dp"
        android:text="Change Password"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/end"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/layoutCurrentPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="Current password"
        app:hintTextColor="@color/end"
        app:boxStrokeColor="@color/end"
        app:startIconDrawable="@drawable/ic_password"
        app:startIconTint="@color/end">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtCurrentPw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLength="40"
            android:singleLine="true"
            android:textColor="@color/end"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/layoutNewPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="New password"
        app:hintTextColor="@color/end"
        app:boxStrokeColor="@color/end"
        app:startIconDrawable="@drawable/ic_password"
        app:startIconTint="@color/end">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNewPw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLength="40"
            android:singleLine="true"
            android:textColor="@color/end"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/layoutConfirmPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="Confirm new password"
        app:hintTextColor="@color/end"
        app:boxStrokeColor="@color/end"
        app:startIconDrawable="@drawable/ic_confirm"
        app:startIconTint="@color/end">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtConfirmNewPw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:maxLength="40"
            android:singleLine="true"
            android:textColor="@color/end"/>
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:id="@+id/btnChange"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/end"
        android:background="@drawable/button_rounded"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Change"
        android:layout_marginBottom="70dp"/>
</LinearLayout>